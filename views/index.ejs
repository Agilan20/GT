    <%- include('navbar.ejs') -%>
        <div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">

            <!-- heading -->
            <div class="sm:mx-auto sm:w-full sm:max-w-sm">
                <img class="mx-auto h-40 w-auto" src="chef.jpg" alt="Your Company">
                <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">
                    Grab your seats now!
                </h2>
            </div>

            <!-- form -->
            <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
                <form class="space-y-6" action="/form-submit" method="POST">

                    <!-- username input -->
                    <div>
                        <label for="username" class="block text-sm font-medium leading-6 text-gray-900">
                            Username
                        </label>
                        <div class="mt-2">
                            <input id="username" name="username" type="text" required
                                class="outline-none block w-full rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                        </div>
                    </div>

                    <!-- Arrival Time input -->
                    <div>
                        <label for="arrival" class="block text-sm font-medium leading-6 text-gray-900">
                            Arrival Time
                        </label>
                        <div class="mt-2">
                            <input id="arrival" name="arr" type="time" required
                                class="outline-none block w-full rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                        </div>
                    </div>

                    <!-- departure time input -->

                    <div>
                        <label for="departure" class="block text-sm font-medium leading-6 text-gray-900">
                            Departure Time
                        </label>
                        <div class="mt-2">
                            <input id="departure" name="dep" type="time" required
                                class="outline-none block w-full rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                        </div>
                    </div>

                    <!-- username input -->
                    <div>
                        <label for="date" class="block text-sm font-medium leading-6 text-gray-900">
                            Date
                        </label>
                        <div class="mt-2">
                            <input id="date" name="date" type="text" disabled value=<%= date %>
                                class="outline-none block w-full rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                        </div>
                    </div>

                    <div>
                        <button type="submit"
                            class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                            Book Now
                        </button>
                    </div>
                </form>
            </div>
        </div>

</body>
</html>